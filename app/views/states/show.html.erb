<div class="col-md-12">
<%= link_to board_path(@state.board), class: 'btn btn-primary' do %>
  <i class="bi bi-arrow-90deg-left"></i> Back to Board
<% end %>
</div>

<div class="text-center" style="margin-top: 20px;">
  <h1><%= @state.state_name %></h1>
</div>

<div class="text-center" style="margin-top: 20px;">
  <h2>Tasks:</h2>
  <ul style="list-style-position: inside;">
    <% @state.tasks.each do |task| %>
      <li><%= task.title %></li>
      <% if user_signed_in? %>
        <%= link_to edit_task_path(task), class: 'btn btn-warning' do %>
          <i class="bi bi-pen"></i> Edit Task
        <% end %>
        <%= link_to task, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
          <i class="bi bi-pen"></i> Delete Task
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>

<% if user_signed_in? %>
  <div class="text-center" style="margin-top: 20px;">
    <%= link_to 'Create Task', new_board_state_task_path(@state.board_id, @state.id), class: 'btn btn-success' %>
  </div>
<% end%>
