<h1> Index of states </h1>
<%= link_to 'Back', boards_path, class: 'btn btn-primary' %>
<table class="table table-striped">
    <thead>
        <tr>
            <th>State Name</th>
            <th>Board Name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @states.each do |state| %>
            <tr>
                <td><%= state.state_name %></td>
                <td><%= state.board.board_name %></td>
                <td><%= link_to 'Show', state, class: 'btn btn-primary'%></td>
                <% if user_signed_in? %>
                    <td><%= link_to 'Edit', edit_state_path(state), class: 'btn btn-primary' %></td>
                    <td><%= link_to "Destroy", state, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>